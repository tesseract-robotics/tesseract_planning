<?xml version="1.0"?>
<package format="2">
  <name>tesseract_time_parameterization</name>
  <version>0.30.0</version>
  <description>The Tesseract Time Parameterization package</description>
  <author email="levi.armstrong@swri.org">Levi Armstrong</author>
  <maintainer email="levi.armstrong@swri.org">Levi Armstrong</maintainer>
  <license>BSD</license>

  <!-- Following recommendations of REP 136 -->
  <buildtool_depend>cmake</buildtool_depend>
  <build_depend>ros_industrial_cmake_boilerplate</build_depend>

  <depend>libconsole-bridge-dev</depend>
  <depend>tesseract_common</depend>
  <depend>tesseract_kinematics</depend>
  <depend>tesseract_environment</depend>
  <depend>tesseract_command_language</depend>
  <depend>ruckig</depend>

  <build_depend>eigen</build_depend>
  <build_export_depend>eigen</build_export_depend>

  <test_depend>gtest</test_depend>
  <test_depend>tesseract_support</test_depend>

  <export>
    <build_type>cmake</build_type>
  </export>
</package>
